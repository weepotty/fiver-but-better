<div class="services-list">
  <% if @query %>
    <h1 class="fw-bold">Results for "<%= @query %>"</h1>
  <% else %>
    <h1 class="fw-bold"><%= @category.nil? ? "All Categories" : @category  %></h1>
    <p class="fs-5">This page currently shows all services available for <%= @category.nil? ? "All Categories" : @category  %></p>
  <% end %>

  <%# Header for the services %>
  <div class="services-header">
    <p class="fs-6"><%= services.count %> services available</p>
  </div>

  <%# Grid for services cards %>
  <div class="row">
    <% services.each do |service| %>
      <div class="col-3 mb-4">
        <%= render 'users/service_card', service: service, user: service.seller %>
      </div>
    <% end %>
  </div>
</div>

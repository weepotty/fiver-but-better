<h2 class="text-center">Sign In to Fiverr</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, "Continue", class: "btn btn-green w-100" %>
  </div>

  <div class="d-flex justify-content-between">
    <div class="form-inputs">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-green" %>
  </div>

  <div class="w-100 border border-bottom border-muted"></div>

  <p class="text-center my-3">Not a member yet? <%= link_to "Join now", new_registration_path(resource_name), class: "link-green" %></p>

<% end %>


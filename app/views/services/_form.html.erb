<%= simple_form_for(@service) do |f| %>
  <%= f.input :title, label: 'Gig Title', placeholder: 'I will do something I am really good at' %>
  <%= f.input :description, as: :text, placeholder: 'What does the service entail?'%>
  <%= f.input :category, :as => :select, :collection => Service::CATEGORIES %>
  <%= f.input :price, label: 'Price', placeholder: '$ (SGD)' %>
  <%= f.input :delivery_time, label: 'Delivery time (days)', placeholder: 'Enter a number from 1 to 90' %>
  <%= f.input :photo, as: :file %>
  <%= f.submit 'Create Gig', class: 'btn btn-green' %>
<% end %>
